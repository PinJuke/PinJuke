<UserControl x:Class="PinJuke.View.Browser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PinJuke.View"
             mc:Ignorable="d" 
             d:DesignWidth="300" d:DesignHeight="300" 
             >

    <Grid Style="{StaticResource ViewVisibleFadeStyle}" Background="#80000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Foreground="White" FontSize="30" FontWeight="Bold" Margin="10,10,10,10">
            <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding NavigationDisplayPath}" />
        </Label>

        <Grid Grid.Row="1" Name="BrowserListContainer" Margin="10,0,10,10">
        </Grid>
    </Grid>
    
</UserControl>
