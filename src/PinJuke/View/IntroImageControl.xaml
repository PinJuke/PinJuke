<local:BaseControl x:Class="PinJuke.View.IntroImageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PinJuke.View"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#FF333333" Style="{StaticResource ViewVisibleFadeStyle}">
        <Image Width="200" Height="200"
               Source="{Binding ImageSource}" VerticalAlignment="Center" HorizontalAlignment="Center"
               />
    </Grid>
</local:BaseControl>
