<local:ConfiguratorControl x:Class="PinJuke.Configurator.View.BoolControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:PinJuke.Configurator.View"
    mc:Ignorable="d" 
    d:DesignHeight="20" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CheckBox VerticalAlignment="Center" Content="{Binding LabelText}"
                  IsChecked="{Binding Value, Mode=TwoWay}" IsEnabled="{Binding Enabled}"/>

        <StackPanel x:Name="Controls" Grid.Column="1" Orientation="Vertical">
        </StackPanel>
    </Grid>
</local:ConfiguratorControl>
