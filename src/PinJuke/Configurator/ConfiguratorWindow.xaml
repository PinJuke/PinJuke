<Window x:Class="PinJuke.Configurator.ConfiguratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PinJuke.Configurator"
        mc:Ignorable="d"
        Title="PinJuke Configurator" Height="800" Width="700" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TabControl x:Name="Tabs" Grid.ColumnSpan="2">
        </TabControl>

        <Button x:Name="AddPlaylistButton" Grid.Row="1" Grid.Column="0" Content="Add playlist" Click="AddPlaylistButton_Click"/>
        <Button x:Name="SaveButton" Grid.Row="1" Grid.Column="1" Content="Save all" Click="SaveButton_Clicked"/>
    </Grid>
</Window>
